<% book.book_comments.each do |book_comment| %>
  <% book_comment_user = book_comment.user %>
  <tr>
    <td>
      <%= link_to user_path(book_comment.user), class: "user_#{book_comment_user.id}" do %>
        <%= attachment_image_tag book_comment_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %><br>
        <%= book_comment_user.name %>
      <% end %>
    </td>
    <td>
      <div>
        <%= book_comment.comment %>
      </div>
    </td>
    <td>
      <% if book_comment_user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn btn-sm btn-danger" %>
      <% end %>
    </td>
  </tr>
<% end %>