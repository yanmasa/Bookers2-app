<div class = "container">
  <div class = "row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <div class = "form-group">
          <label for="BookTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"BookTitle", placeholder:@book.title, class:"form-control title" %>
        </div>
        <div class = "form-group">
          <label for="BookOpinion">Opinion</label>
          <%= f.text_area :Body, placeholder:@book.body, class:"form-control body" %>
        </div>
        <div class = "form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
       |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>