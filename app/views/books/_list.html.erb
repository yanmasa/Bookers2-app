    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <% if user.id == current_user.id %>
          <%= link_to "",edit_user_path(user), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_current_user.id" %>
        <% else %>
          <%= link_to "",user_path(current_user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_current_user.id" %>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, local:true do |f| %>
        <div class="form-group">
          <%= f.label :title, 'Title' %><br />
          <%= f.text_field :title, class:"title" %>
        </div>
        <div class="form-group">
          <%= f.label :body, 'Opinion' %><br />
          <%= f.text_area :body, class:"body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>