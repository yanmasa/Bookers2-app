<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', user: @user, book: @book%>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= image_tag attachment_url(@user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"), size:'40x40' %><br>
                <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book_aot.title, book_path(@book_aot.id) %>
              </td>
              <td>
                <%= @book_aot.body %>
              </td>
                <% if @user.id == current_user.id %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book_aot.id) %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book_aot.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </td>
                <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>