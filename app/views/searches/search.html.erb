<% if @range == "User" %>
  <h2><%= "Users serach for \"#{@word}\"" %></h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag attachment_url(user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"), size:'40x40' %>
          </td>
          <td>
            <%=  user.name %>
          </td>
          <td>
            <%= link_to "Show", user_path(user.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2><%= "Books serach for \"#{@word}\"" %></h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(User.find(book.user_id).id) do %>
            <%= image_tag attachment_url(User.find(book.user_id), :profile_image, :fill, 40, 40, fallback: "no_image.jpg"), size:'40x40' %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title , book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>