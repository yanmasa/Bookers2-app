<div class = "container">
  <div class = "row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <% if @user.errors.any? %>
          <div id= "error_explanation">
            <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
            <% @user.errors.full_messages.each do |message| %>
              <ul>
                <li><%= message %></li>
              </ul>
            <% end %>
          </div>
        <% end %>        
        <div class = "form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:current_user.name, class:"form-control name" %>
        </div>
        <div class = "form-group">
          <label for="inputImage">image</label>
          <%= f.attachment_field :profile_image, class:"form-control-file user_image" %>
        </div>
        <div class = "form-group">
          <label for="inputIntroduction">introduction</label>
          <%= f.text_area :introduction, class:"form-control introduction" %>
        </div>
        <div class = "form-group">
          <%= f.submit "Update user", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>